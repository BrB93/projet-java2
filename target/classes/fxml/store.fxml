<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="farm.StoreController"
      spacing="5" style="-fx-padding: 5;">

    <Label text="Magasin" style="-fx-font-weight: bold; -fx-font-size: 12px;"/>

    <!-- Section Graines -->
    <TitledPane text="Graines" expanded="true" style="-fx-font-size: 11px;" collapsible="true">
        <HBox spacing="3">
            <Button text="Blé (10€)" onAction="#buyWheat"
                    style="-fx-padding: 2 4; -fx-font-size: 10px;"/>
            <Button text="Maïs (15€)" onAction="#buyCorn"
                    style="-fx-padding: 2 4; -fx-font-size: 10px;"/>
            <Button text="Carotte (8€)" onAction="#buyCarrot"
                    style="-fx-padding: 2 4; -fx-font-size: 10px;"/>
        </HBox>
    </TitledPane>

    <!-- Section Animaux -->
    <TitledPane text="Animaux" expanded="true" style="-fx-font-size: 11px;" collapsible="true">
        <HBox spacing="3">
            <Button text="Poule (50€)" onAction="#buyChicken"
                    style="-fx-padding: 2 4; -fx-font-size: 10px;"/>
            <Button text="Vache (200€)" onAction="#buyCow"
                    style="-fx-padding: 2 4; -fx-font-size: 10px;"/>
            <Button text="Mouton (150€)" onAction="#buySheep"
                    style="-fx-padding: 2 4; -fx-font-size: 10px;"/>
        </HBox>
    </TitledPane>

    <Label fx:id="messageLabel" text="" style="-fx-font-size: 10px; -fx-font-style: italic;"/>
</VBox>